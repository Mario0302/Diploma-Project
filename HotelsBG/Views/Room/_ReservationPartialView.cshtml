@model HotelsBG.Models.ReservationRoom.ReservationCreateBindingModel

<form asp-controller="Reservation" asp-action="Create" method="post">
    <div class="d-flex align-items-center">
        <label class="font-weight-bold text-left mr-1" asp-for="AccommodationDate">AccommodationDate:</label>
        <div class="mr-1">
            <input class="form-control" min="1" asp-for="AccommodationDate" />
            <span asp-validation-for="AccommodationDate" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center">
            <label class="font-weight-bold text-left mr-1" asp-for="LeavingDate">LeavingDate:</label>
            <div class="mr-1">
                <input class="form-control" min="1" asp-for="LeavingDate" />
                <span asp-validation-for="LeavingDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-danger">Reservation</button>
        </div>
        <input type="hidden" asp-for="RoomId" value="@Model.RoomId">
</form>